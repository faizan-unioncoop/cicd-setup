default_platform :ios

platform :ios do
  before_all do
    setup_circle_ci
  end

  desc "Upload to Firebase"
  lane :upload_firebase do
    api_key = app_store_connect_api_key( 
      key_id: $APP_STORE_CONNECT_API_KEY_KEY_ID, 
      issuer_id: $APP_STORE_CONNECT_API_KEY_ISSUER_ID, 
      key_content: $APP_STORE_CONNECT_API_KEY_KEY,
      is_key_content_base64: true
    )
    increment_build_number(
      build_number: app_store_build_number(
      initial_build_number: 0,
      version: get_version_number(xcodeproj: "cicd-setup.xcodeproj"),
      live: false
      ) + 1,
    )
    match(type: "adhoc", readonly: false)
    gym(scheme: "cicd-setup")
    firebase_app_distribution(
      app: "1:1029978588996:ios:c1bb15ae733377be077911",
      release_notes: "This is a test release!"
    )
  end

  lane :get_dev_certs do
    cert(
          development: true
        )
    sigh(
          development: true
        )
  end
end